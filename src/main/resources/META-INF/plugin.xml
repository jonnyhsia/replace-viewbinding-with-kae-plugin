<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.jonnyhsia.replaceviewbindingwithkaeplugin</id>
    <name>Replace-View-Binding-with-Kae</name>
    <vendor>jonnyhsia</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.github.jonnyhsia.replaceviewbindingwithkaeplugin.services.MyApplicationService"/>
        <projectService
                serviceImplementation="com.github.jonnyhsia.replaceviewbindingwithkaeplugin.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.jonnyhsia.replaceviewbindingwithkaeplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <actions>
        <action id="ReplaceAction"
                class="com.github.jonnyhsia.replaceviewbindingwithkaeplugin.ReplaceAction"
                text="ReplaceAction">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
